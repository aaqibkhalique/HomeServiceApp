<!-- This page is for initiating the password reset process -->
@page "/ForgetPasswordOne"

<!-- Importing necessary components and layouts -->
@using HS.Shared.Components.Layout
@layout EmptyLayout

<!-- Styling for the page -->
<style>
    /* Styling for container */
    .container {
        overflow-y: hidden;
        overflow-x: hidden;
    }

    /* Styling for centering divs */
    .DivCenter {
        display: flex;
        justify-content: center;
    }

    /* Styling for icon text */
    .IconText {
        font-size: xx-large;
        font-weight: bold;
        margin-left: 8px;
    }

    /* Styling for text */
    .Text {
        font-weight: 500;
        width: 333px;
        margin-top: 25px;
    }

    /* Styling for continue button */
    .ContinueBtn {
        border-radius: 30px;
        width: 330px;
        height: 50px;
    }

    /* Styling for selected card */
    .stylingCard {
        border: solid 1px #974eff;
    }
</style>

<!-- Main container for the page -->
<div class="container">

    <!-- Header section -->
    <div class="row" style="margin-top: 20px;">
        <div class="col ml-3 mt-1">
            <!-- Back button -->
            <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" OnClick="ClickBack" Style="padding-top: 1px;"></MudIconButton>
            <!-- Page title -->
            <span class="IconText">Forgot Password</span>
        </div>
    </div>

    <!-- Image section -->
    <div class="row DivCenter">
        <div class="col ml-5 mt-5">
            <!-- Image for illustration -->
            <MudImage Class="img-fluid" Src="images/createPassword.png" Elevation="0" Height="250" Width="250" Style="margin-top:20px" />
        </div>
    </div>
    <!-- Instruction text section -->
    <div class="row DivCenter">
        <div class="col DivCenter">
            <!-- Text instructing user to select contact method -->
            <MudText Typo="Typo.subtitle1" Class="Text">Select which contact details we should use to reset your password</MudText>
        </div>
    </div>
    <!-- Card selection section -->
    <div class="row">
        <div class="col DivCenter">
            <!-- Card for SMS option -->
            <MudCard @onclick="(() => OnCardClick(1))" Style="border-radius:10px;margin-top:10px;width:326px;" Class="@stylingCard1">
                <MudCardHeader>
                    <!-- Avatar for SMS icon -->
                    <CardHeaderAvatar>
                        <MudImage Class="img-fluid" Src="images/chatIcon.png" Elevation="0" Height="50" Width="50" />
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <!-- Text for SMS option -->
                        <MudText Typo="Typo.body2">Via SMS</MudText>
                        <!-- Displaying SMS contact -->
                        <MudText Typo="Typo.subtitle1" Style="font-weight:bold">+111**********99</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
            </MudCard>
        </div>
    </div>
    <div class="row">
        <div class="col DivCenter">
            <!-- Card for Email option -->
            <MudCard @onclick="(() => OnCardClick(2))" Style="border-radius:10px;margin-top:15px;" Class="@stylingCard2">
                <MudCardHeader>
                    <!-- Avatar for Email icon -->
                    <CardHeaderAvatar>
                        <MudImage Class="img-fluid" Src="images/emailicon.png" Elevation="0" Height="50" Width="50" />
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <!-- Text for Email option -->
                        <MudText Typo="Typo.body2">Via Email</MudText>
                        <!-- Displaying Email contact -->
                        <MudText Typo="Typo.subtitle1" Style="font-weight:bold">and******ley@yourdomain.com</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
            </MudCard>
        </div>
    </div>

    <!-- Continue button section -->
    <div class="row">
        <div class="col mt-5 DivCenter">
            <!-- Continue button -->
            <MudButton Class="ContinueBtn" Variant="Variant.Filled" OnClick="Continue" Color="Color.Primary">Continue</MudButton>
        </div>
    </div>

</div>

<!-- Code section -->
@code {
    // Injecting NavigationManager for navigation functionality
    @inject NavigationManager Navigation;

    // Method for back button click
    private void ClickBack()
    {
        Navigation.NavigateTo("SignIn");
    }

    // Method for continue button click
    private void Continue()
    {
        Navigation.NavigateTo("ForgotPasswordTwo");
    }

    // Variables to track selected card style
    string stylingCard1 = "";
    string stylingCard2 = "";

    // Method to handle card click and change selected style
    private void OnCardClick(int param)
    {
        if (param == 1)
        {
            stylingCard2 = "";
            stylingCard1 = "stylingCard";
        }
        else
        {
            stylingCard1 = "";
            stylingCard2 = "stylingCard";
        }
    }
}
