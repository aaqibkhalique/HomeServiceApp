@page "/ServiceCleaning"
@using HS.Shared.Components.Layout
@layout EmptyLayout

<style>

    .container {
        overflow:hidden;
        overflow-y: auto;
        height: 647px;
    }

    .DivCenter {
        display: flex;
        justify-content: center;
    }

    .IconText {
        font-size: xx-large;
        font-weight: bold;
        margin-left: 8px;
    }

 

    .Text {
        font-weight: bolder;
        font-size: larger;
    
    }
    .price{
        font-size: xx-large;
        font-weight: bolder;
    }


    .Sticky {
        padding: 20px;
        position: fixed;
        bottom: 0;
        width: 100%;
    }

    .cardContent {
        display: flex;
        justify-content: space-between;
        width: 135px;
        margin-left: 41px;
        margin-top: 5px;
    }

    .mudCard {
        border-radius: 23px;
        width: 80%;
    }

    .numberText {
        margin-top: 8px;
    }

    .iconButton {
        background-color: #F4ECFF !important;
    }


    .cardHeader .mud-card-header-content {
        display: flex;
        justify-content: flex-end;
    }
    .MainPic{
        background-image: url("images/Scleaning.png");
        height: 54%;
        background-repeat: no-repeat;
        background-size: contain;
        background-position: center;
    }

    .BookBtn {
        border-radius: 30px;
        width: 250px;
        height: 50px;
        color: var(--mud-palette-primary);
        background-color: #F4ECFF;
        margin-left: 11px;
    }


    .ContinueBtn {
        border-radius: 30px;
        width: 250px;
        height: 50px;
      
    }

    .mychip {
        color: var(--mud-palette-primary);
        background-color: #F4ECFF;
    }

    .mud-divider-fullwidth {
        margin-left:5px;
        width: 98%;
    }

    .PhotoVideo {
        display: flex;
        justify-content: space-between;
        width: 100%;
    }
    .images{
        display:flex;
        justify-content:space-between;
    }

    .scroll {
        margin: 4px, 4px;
        padding: 4px;
        width: 100%;
        overflow-x: auto;
        overflow-y: hidden;
        white-space: nowrap;
    }

    .mud-chip {
        border: solid !important;
    }


    .moreIcon .mud-icon-root {
        border: solid;
        border-radius: 20px;
    }

    .reviewCard{
        padding-top: 0px !important;
        padding-right: 16px !important;
        padding-bottom: 16px !important;
        padding-left: 16px !important;
    }
</style>





<div class="container" >

    <div class="row MainPic" >
        <div class="col ">
            <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Color="Color.Default" OnClick="ClickBack" ></MudIconButton>

        </div>
    </div>


    <div class="row" style="margin-top: 20px;">
        <div class="col ml-3 mt-1">
            <span class="IconText">House Cleaning</span>
            <MudIconButton  Icon="@Icons.Material.Outlined.BookmarkBorder" Color="Color.Primary" Style="float: right;"></MudIconButton>
        </div>
    </div>




    <div class="row  DivCenter ">
        <div class="col ">
            <MudText Typo="Typo.subtitle1"> <span class="mud-primary-text Text"> Jenny Wilson</span>  <MudIconButton Icon="@Icons.Material.Filled.Star" Style="color:gold;"></MudIconButton>4.8 (4.479 reviews)</MudText>
        </div>
    </div>

    <div class="row  DivCenter ">
        <div class="col ">
            <MudText Typo="Typo.subtitle1"><MudChip Variant="Variant.Text" Class="mychip mud-primary-text">cleaning</MudChip><MudIconButton Icon="@Icons.Material.Filled.LocationOn" Color="Color.Primary"></MudIconButton>255 Grand Park Avenue, New York</MudText>
        </div>
    </div>

    <div class="row">
        <div class="col ml-5">
            <MudText Typo="Typo.subtitle1"> <span class="mud-primary-text price" > $20</span>  (Floor price)</MudText>
        </div>
    </div>

    <MudDivider></MudDivider>
    <div class="row">
        <div class="col ml-5">
            <MudText Style="font-weight:bolder;font-size: 20px;" Typo="Typo.subtitle1">About me</MudText>
        </div>
    </div>
    <div class="row">
        <div class="col ml-5">
            <MudText Typo="Typo.body2">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim nisi ut aliquip. <span class="mud-primary-text">Read more...</span></MudText>
        </div>
    </div>

    <div class="row">
        <div class="col ml-3 ">
            <MudCardActions Class="PhotoVideo">
                <MudText Style="font-weight:bold" Typo="Typo.h6">Photo & Videos</MudText>
                <MudButton Variant="Variant.Text"> <MudText Color="Color.Primary" Style="font-weight:bold" Typo="Typo.h6">See All</MudText></MudButton>
            </MudCardActions>
        </div>
    </div>

    <div class="row DivCenter">
        <div class="col ml-3 images">
            <div>
                <MudImage Src="images/Scleaning1.png" Width="200" Height="300" Elevation="0" Class="rounded-lg " Style="padding: 10px;" />
            </div>
            <div>
                <MudImage Src="images/Scleaning2.png" Width="200" Height="150" Elevation="0" Class="rounded-lg " Style="padding: 10px;" />
                <MudImage Src="images/Scleaning3.png" Width="200" Height="150" Elevation="0" Class="rounded-lg " Style="padding: 10px;" />
            </div>
        </div>
    </div>

    <div class="row DivCenter">
        <div class="col ml-3 images">
            <div>
                <MudImage Src="images/Scleaning4.png" Width="200" Height="150" Elevation="0" Class="rounded-lg " Style="padding: 10px;" />
                <MudImage Src="images/Scleaning6.png" Width="200" Height="150" Elevation="0" Class="rounded-lg " Style="padding: 10px;" />
            </div>
            <div>
                <MudImage Src="images/Scleaning5.png" Width="200" Height="300" Elevation="0" Class="rounded-lg " Style="padding: 10px;" />
            </div>
            
        </div>
    </div>
    <div class="row">
        <div class="col ml-3 ">
            <MudCardActions Class="PhotoVideo">
                <MudText Style="font-weight:bold" Typo="Typo.h6"><MudIconButton Icon="@Icons.Material.Filled.Star" Style="color:gold;"></MudIconButton>4.8 (4.479 reviews)</MudText>
                <MudButton Variant="Variant.Text"> <MudText Color="Color.Primary" Style="font-weight:bold" Typo="Typo.h6">See All</MudText></MudButton>
            </MudCardActions>
        </div>
    </div>



    <div class="row">
        <div class="col">
            <div class="scroll">
                <MudChipSet Filter="false" Mandatory="true" SelectedChipChanged="OnSelectChip">
                    <MudChip Text="All" Variant="Variant.Text" Color="Color.Primary"><MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Primary"></MudIcon>All</MudChip>
                    <MudChip Text="5" Variant="Variant.Text" Color="Color.Primary"><MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Primary"></MudIcon>&nbsp;5</MudChip>
                    <MudChip Text="4" Variant="Variant.Text" Color="Color.Primary"><MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Primary"></MudIcon>&nbsp;4</MudChip>
                    <MudChip Text="3" Variant="Variant.Text" Color="Color.Primary"><MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Primary"></MudIcon>&nbsp;3</MudChip>
                    <MudChip Text="2" Variant="Variant.Text" Color="Color.Primary"><MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Primary"></MudIcon>&nbsp;2</MudChip>
                    <MudChip Text="1" Variant="Variant.Text" Color="Color.Primary"><MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Primary"></MudIcon>&nbsp;1</MudChip>
                </MudChipSet>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col ml-3 mt-1">
            <MudCardHeader >
                <CardHeaderAvatar >
                    <MudImage Style="height: 55px;" Src="images/dpreview1.png"></MudImage>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Style="font-weight:bold" Typo="Typo.subtitle1">Lauralee Quintero</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudChip Text="5" Variant="Variant.Text" Color="Color.Primary"><MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Primary"></MudIcon>&nbsp;5</MudChip>
                    <MudIconButton Class="moreIcon" Size="Size.Large" Icon="@Icons.Material.Filled.MoreHoriz" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent Class="reviewCard">
                <MudText Typo="Typo.subtitle1">Awesome! this is what i was looking for, i recommend to everyone ❤️❤️️❤️</MudText>
            </MudCardContent>
            <MudCardActions >
                <MudImage Style="height: 20px;" Src="images/heart1.png"></MudImage>  &nbsp;<MudText Typo="Typo.subtitle1"><span style="font-weight:bold">783</span>  &nbsp;&nbsp;&nbsp;  1 weeks ago</MudText>
            </MudCardActions>
        </div>
    </div>

    <div class="row">
        <div class="col ml-3 mt-1">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudImage Style="height: 55px;" Src="images/dpreview2.png"></MudImage>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Style="font-weight:bold" Typo="Typo.subtitle1"> Clinton Mcclure</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudChip Text="5" Variant="Variant.Text" Color="Color.Primary"><MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Primary"></MudIcon>&nbsp;5</MudChip>
                    <MudIconButton Class="moreIcon" Size="Size.Large" Icon="@Icons.Material.Filled.MoreHoriz" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent Class="reviewCard">
                <MudText Typo="Typo.subtitle1">The workers are very professional and the results are very satisfying! I like it very much! 💯💯💯</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudImage Style="height: 20px;" Src="images/heart2.png"></MudImage>  &nbsp;<MudText Typo="Typo.subtitle1"><span style="font-weight:bold">597</span>  &nbsp;&nbsp;&nbsp;  2 weeks ago</MudText>
            </MudCardActions>
        </div>
    </div>

    <div class="row">
        <div class="col ml-3 mt-1">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudImage Style="height: 55px;" Src="images/dpreview3.png"></MudImage>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Style="font-weight:bold" Typo="Typo.subtitle1">Chieko Chute</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudChip Text="5" Variant="Variant.Text" Color="Color.Primary"><MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Primary"></MudIcon>&nbsp;5</MudChip>
                    <MudIconButton Class="moreIcon" Size="Size.Large" Icon="@Icons.Material.Filled.MoreHoriz" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent Class="reviewCard">
                <MudText Typo="Typo.subtitle1">This is the first time I've used his services, and the results were amazing! 👍👍👍</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudImage Style="height: 20px;" Src="images/heart1.png"></MudImage>  &nbsp;<MudText Typo="Typo.subtitle1"><span style="font-weight:bold">724</span>  &nbsp;&nbsp;&nbsp;  3 weeks ago</MudText>
            </MudCardActions>
        </div>
    </div>








</div>

<MudCard Class="Sticky DivCenter">
    <MudButton Class="ContinueBtn" Variant="Variant.Filled" Color="Color.Primary">Message</MudButton>
    <MudButton Class="BookBtn" Variant="Variant.Filled" >Book Now</MudButton>
</MudCard>


