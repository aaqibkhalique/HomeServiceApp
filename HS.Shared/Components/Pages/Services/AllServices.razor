@page "/AllServices"
@using HS.Shared.Components.Layout
@layout EmptyLayout

<style>

    /* Styling for the container */
    .container {
        overflow-y: hidden;
        overflow-x: hidden;
    }

    /* Styling for centering elements */
    .DivCenter {
        display: flex;
        justify-content: center;
    }

    /* Styling for main icon text */
    .IconText {
        font-size: xx-large;
        font-weight: bold;
        margin-left: 8px;
    }

    /* Styling for right icon */
    .rightIcon .mud-icon-root {
        border: solid;
        border-radius: 12px;
    }

    /* Styling for text elements */
    .Text {
        font-weight: bold;
    }

    /* Styling for smaller text */
    .smalltext {
        font-size: smaller;
    }

    /* Styling for services section */
    .services {
        display: flex;
        justify-content: space-between;
        width: 90%
    }
</style>

<div class="container">

    <div class="row" style="margin-top: 20px;">
        <div class="col ml-3 mt-1">
            <!-- Back button -->
            <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" OnClick="ClickBack" Style="padding-top: 1px;"></MudIconButton>
            <!-- Title for the page -->
            <span class="IconText">All Services</span>
            <!-- Right icon button -->
            <MudIconButton Class="rightIcon" Icon="@Icons.Material.Outlined.MoreHoriz" Style="float: right;"></MudIconButton>
        </div>
    </div>

    <!-- Services section -->
    <div class="row">
        <div class="col ml-3 mt-5 services">
            <!-- Cleaning service -->
            <div style="text-align:center">
                <MudButton @onclick=@(() => ClickToNext("HouseCleaning"))>
                    <MudImage Src="images/cleaning.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                </MudButton>
                <h5 class="mt-3">Cleaning</h5>
            </div>
            <!-- Repairing service -->
            <div style="text-align:center">
                <MudImage Src="images/repairing.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3">Repairing</h5>
            </div>

            <!-- Painting service -->
            <div style="text-align:center">
                <MudImage Src="images/painting.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3">Painting</h5>
            </div>

            <!-- Laundry service -->
            <div style="text-align:center">
                <MudImage Src="images/laundry.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3">Laundry</h5>
            </div>
        </div>
    </div>
    <!-- Additional services rows -->
    <div class="row mt-5">
        <div class="col ml-3 services">
            <!-- Appliances service -->
            <div style="text-align:center">
                <MudImage Src="images/appliances.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3">Appliances</h5>
            </div>
            <!-- Plumbing service -->
            <div style="text-align:center">
                <MudImage Src="images/plumbing.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3">Plumbing</h5>
            </div>

            <!-- Shifting service -->
            <div style="text-align:center">
                <MudImage Src="images/shifting.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3">Shifting</h5>
            </div>

            <!-- Beauty service -->
            <div style="text-align:center">
                <MudImage Src="images/beauty.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3">Beauty</h5>
            </div>
        </div>
    </div>
    <!-- Additional services rows -->
    <div class="row mt-5">
        <div class="col ml-3 services">
            <!-- AC Repair service -->
            <div style="text-align:center">
                <MudImage Src="images/AcRepair.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3">AC Repa..</h5>
            </div>
            <!-- Vehicle service -->
            <div style="text-align:center">
                <MudImage Src="images/vehicle.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3">Vehicle</h5>
            </div>

            <!-- Electronics service -->
            <div style="text-align:center">
                <MudImage Src="images/electronic.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3">Electronics</h5>
            </div>

            <!-- Massage service -->
            <div style="text-align:center">
                <MudImage Src="images/massage.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3">Massage</h5>
            </div>
        </div>
    </div>
    <!-- Additional services rows -->
    <div class="row mt-5">
        <div class="col ml-3 services">
            <!-- Men's Saloon service -->
            <div style="text-align:center">
                <MudImage Src="images/menSaloon.png" Fluid="true" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3">Men's Sal..</h5>
            </div>

        </div>
    </div>
</div>

@code {

    // Inject NavigationManager for navigation functionality
    @inject NavigationManager Navigation;

    // Method for handling back button click
    private void ClickBack()
    {
        Navigation.NavigateTo("Home");
    }

    // Method for navigating to the next service
    private void ClickToNext(string path)
    {
        Navigation.NavigateTo(path);
    }

}
