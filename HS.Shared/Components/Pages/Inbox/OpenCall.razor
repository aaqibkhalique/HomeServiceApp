@page "/OpenCall"
@using HS.Shared.Components.Layout
@layout EmptyLayout

<style>

    /* Styling for the container */
    .container {
        overflow-y: hidden;
        overflow-x:hidden;
    }

    .DivCenter {
        display: flex;
        justify-content: center;
    }

    @@media only screen and (max-device-width: 480px) {

        .callingImage {
            padding: 5px;
            height: 300px;
        }

        .callButtonAction {
            display: flex;
            justify-content: space-evenly;
            margin-bottom: 14px;
            margin-left:2px;
        }

        .CallRow {
            margin-top: 0px;
        }
    }

    @@media only screen and (min-device-width: 480px) {

        .callingImage{
            padding: 10px;
            height: 345px;
        }

        .callButtonAction{
            display: flex;
            justify-content: space-evenly;
            margin-bottom: 14px;
            margin-top:40px;
        }

        .CallRow{
            margin-top: 20px;
        }
    }
</style>

<div class="container">

    <!-- Back button section -->
    <div class="row" style="margin-top: 20px;">
        <div class="col ml-3 mt-1">
            <!-- Back button -->
            <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" OnClick="ClickBack" Style="padding-top: 1px;"></MudIconButton>
        </div>
    </div>

    <!-- Call details section -->
    <div class="row CallRow">
        <div class="col DivCenter">
            <!-- Call image -->
            <MudImage Src="images/opencall1.png" Elevation="0" Class="callingImage" />
        </div>
    </div>

    <div class="row CallRow">
        <div class="col DivCenter">
            <!-- Caller's name -->
            <MudText Style="font-weight:bolder" Typo="Typo.h6">Jenny Wilson</MudText>
        </div>
    </div>

    <div class="row CallRow">
        <div class="col DivCenter">
            <!-- Call duration -->
            <MudText Typo="Typo.subtitle1">04:38 minutes</MudText>
        </div>
    </div>

    <!-- Call action buttons section -->
    <div class="row  callButtonAction" >
        <!-- Close call button -->
        <div class="col" style="margin-right: 15px; margin-top: 5px;">
            <MudFab Color="Color.Error" StartIcon="@Icons.Material.Filled.Close" />
        </div>
        <!-- Mic button -->
        <div class="col" style="margin-right: 15px; margin-top: 5px;">
            <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Mic" />
        </div>
        <!-- Campaign button -->
        <div class="col" style="margin-right: 15px; margin-top: 5px;">
            <MudFab Color="Color.Warning" StartIcon="@Icons.Material.Filled.Campaign" />
        </div>
    </div>

</div>

@code {

    public string Message { get; set; }

    @inject NavigationManager Navigation;

    // Method to navigate back to the Home page
    private void ClickBack()
    {
        Navigation.NavigateTo("Home/3");
    }

}
