<!-- Page route for the Call page -->
@page "/Call"

<!-- Importing required components and layouts -->
@using HS.Shared.Components.Layout
@layout EmptyLayout

<!-- Styling for the Call page -->
<style>
    /* Container styling for the call list */
    .Callcontainer {
        overflow-y: auto; /* Enable vertical scrolling */
        overflow-x: hidden; /* Hide horizontal overflow */
        height: 80vh; /* Set container height */
    }

    /* Center alignment for elements */
    .DivCenter {
        display: flex;
        justify-content: center;
    }

    /* Styling for call icons */
    .mud-image {
        height: 50px;
    }

    /* Styling for incoming call icon */
    .IncomingIcon {
        border-radius: 6px;
        background: #246BFD; /* Blue background */
        color: white; /* White text color */
        margin-right: 5px; /* Right margin */
    }

    /* Styling for outgoing call icon */
    .OutGoingIcon {
        border-radius: 6px;
        background: #4ADE80; /* Green background */
        color: white; /* White text color */
        margin-right: 5px; /* Right margin */
    }

    /* Styling for missed call icon */
    .MissedIcon {
        border-radius: 6px;
        background: #F75555; /* Red background */
        color: white; /* White text color */
        margin-right: 5px; /* Right margin */
    }

    /* Styling for MudCardHeader */
    .mud-card-header {
        padding: 10px !important; /* Set padding for header */
    }

    /* Styling for the floating add button */
    .addBtn {
        position: fixed; /* Fixed position */
        bottom: 53px; /* Distance from the bottom */
        right: 20px; /* Distance from the right */
        z-index: 1000; /* Set z-index */
    }
</style>

