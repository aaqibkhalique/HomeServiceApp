<!-- Styling for the Chat page -->
<style>
    /* Container styling for the chat messages */
    .Chatcontainer {
        overflow-y: auto; /* Enable vertical scrolling */
        overflow-x: hidden; /* Hide horizontal overflow */
        height: 80vh; /* Set container height */
    }

    /* Center alignment for elements */
    .DivCenter {
        display: flex;
        justify-content: center;
    }

    /* Styling for chat icons */
    .mud-image {
        height: 50px;
    }

    /* Styling for incoming chat icon */
    .IncomingIcon {
        border-radius: 6px;
        background: #246BFD; /* Blue background */
        color: white; /* White text color */
        margin-right: 5px; /* Right margin */
    }

    /* Styling for outgoing chat icon */
    .OutGoingIcon {
        border-radius: 6px;
        background: #4ADE80; /* Green background */
        color: white; /* White text color */
        margin-right: 5px; /* Right margin */
    }

    /* Styling for missed chat icon */
    .MissedIcon {
        border-radius: 6px;
        background: #F75555; /* Red background */
        color: white; /* White text color */
        margin-right: 5px; /* Right margin */
    }

    /* Styling for MudCardHeader */
    .mud-card-header {
        padding: 10px !important; /* Set padding for header */
    }

    /* Styling for the floating add button */
    .addBtn {
        position: fixed; /* Fixed position */
        bottom: 53px; /* Distance from the bottom */
        right: 20px; /* Distance from the right */
        z-index: 1000; /* Set z-index */
    }

    /* Styling for the fab label */
    .mud-fab-label {
        font-size: smaller; /* Smaller font size for the fab label */
    }

    /* Styling for card header actions */
    .mud-card-header-actions {
        text-align: end !important; /* Align actions to the end */
    }

    /* Styling for mud collapse container */
    .mud-collapse-container .mud-collapse-entered {
        transition: none; /* Disable transition for collapse container */
    }
</style>

