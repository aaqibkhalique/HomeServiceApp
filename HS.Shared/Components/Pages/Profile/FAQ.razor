@page "/FAQ"
@using HS.Shared.Components.Layout
@layout EmptyLayout

<style>

    .container {
        overflow-y: hidden; /* Container for FAQ page with hidden overflow on y-axis */
        overflow-x: hidden; /* Container with hidden overflow on x-axis */
    }

    .DivCenter {
        display: flex; /* Flex display for center alignment */
        justify-content: center; /* Center alignment for flex items */
    }

    .scroll {
        margin: 4px, 4px; /* Margin for scrolling area */
        padding: 4px; /* Padding for scrolling area */
        width: 100%; /* Full width for scrolling area */
        overflow-x: auto; /* Horizontal overflow for scrolling */
        overflow-y: hidden; /* Hidden vertical overflow for scrolling */
        white-space: nowrap; /* Prevent line breaks for scrolling content */
    }

    .mud-paper {
        border-radius: 27px; /* Border radius for mud-paper element */
        margin: 20px; /* Margin for mud-paper element */
    }

    .mud-button-label {
        justify-content: space-between; /* Space between alignment for button label */
        font-weight: bolder; /* Bold font weight for button label */
    }
</style>

<div class="container">

    <!-- ChipSet for filtering FAQ topics -->
    <div class="row">
        <div class="col">
            <div class="scroll">
                <MudChipSet Filter="false" Mandatory="true" SelectedChipChanged="OnSelectChip">
                    <MudChip Text="General" Variant="Variant.Text" Color="Color.Primary">General</MudChip>
                    <MudChip Text="Account" Variant="Variant.Text" Color="Color.Primary">Account</MudChip>
                    <MudChip Text="Service" Variant="Variant.Text" Color="Color.Primary">Service</MudChip>
                    <MudChip Text="Payment" Variant="Variant.Text" Color="Color.Primary">Payment</MudChip>
                </MudChipSet>
            </div>
        </div>
    </div>

    <!-- Search input field -->
    <div class="row">
        <div class="col">
            <MudTextField @bind-Value="Search" Label="Search" Variant="Variant.Filled" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.FilterList" AdornmentColor="Color.Primary" />
        </div>
    </div>

    <!-- FAQ Cards with expandable content -->
