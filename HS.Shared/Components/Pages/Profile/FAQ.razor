@code {

    @inject NavigationManager Navigation; // Inject NavigationManager for navigation functionality

    public string Search { get; set; } // Bindable property for search input

    private void ClickBack() // Method to handle back navigation
    {
        Navigation.NavigateTo("Home/4"); // Navigate to Home page
    }

    private void OnSelectChip(MudChip mud) // Method to handle chip selection
    {
        // Implement chip selection logic here
    }

    // Boolean variables to control expand/collapse state of FAQ items
    bool _expanded1 = true;
    bool _expanded2 = false;
    bool _expanded3 = false;
    bool _expanded4 = false;
    bool _expanded5 = false;

    // Method to handle expand/collapse button click for FAQ items
    private void OnExpandCollapseClick(int num)
    {
        // Toggle expand/collapse state based on FAQ item number
        if (num == 1)
        {
            _expanded1 = !_expanded1;
        }
        else if (num == 2)
        {
            _expanded2 = !_expanded2;
        }
        else if (num == 3)
        {
            _expanded3 = !_expanded3;
        }
        else if (num == 4)
        {
            _expanded4 = !_expanded4;
        }
        else if (num == 5)
        {
            _expanded5 = !_expanded5;
        }
    }
}
