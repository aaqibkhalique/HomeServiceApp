@page "/CustomerService"
@using HS.Shared.Components.Layout
@layout EmptyLayout

<style>
    /* Container styles */
    .container {
        overflow-y: hidden;
    }

    /* Center alignment for flex items */
    .DivCenter {
        display: flex;
        justify-content: space-around; /* Centers items evenly along the main axis */
    }

    /* Large and bold text for icons and headings */
    .IconText {
        font-size: xx-large;
        font-weight: bold;
        margin-left: 8px;
    }

    /* Styles for right-aligned icons */
    .rightIcon .mud-icon-root {
        border: solid;
        border-radius: 12px;
    }

    /* Bold text */
    .Text {
        font-weight: bold;
    }

    /* Smaller text size */
    .smalltext {
        font-size: smaller;
    }

    /* Styling for continue button */
    .ContinueBtn {
        border-radius: 30px;
        width: 330px;
        height: 50px;
    }

    /* Flex container for card content */
    .cardContent {
        display: flex;
        justify-content: space-between; /* Centers items evenly along the main axis */
    }

    /* Styling for input control */
    .mud-input-control.mud-input-control-boolean-input {
        margin-top: 6px;
    }

    /* Card styles */
    .mudCard {
        border-radius: 10px;
        margin-top: 25px;
        width: 326px;
        overflow-x: auto;
        height: 536px;
    }

    /* Chat container styles */
    .chat {
        display: flex;
        flex-direction: column;
        gap: 10px;
        padding: 10px;
    }

    /* Styles for messages from the other user */
    .OtherUserSays {
        align-self: flex-start;
        background-color: #f1f0f0;
        border-top-right-radius: 10px;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        padding: 10px;
        max-width: 64%;
        margin-top: 6px;
        width: 300px;
    }

    /* Styles for messages from the current user */
    .userSays {
        align-self: flex-end;
        background-color: var(--mud-palette-primary);
        color: white;
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        padding: 10px;
        max-width: 64%;
        margin-top: 3px;
        width: 300px;
    }

    /* Styles for user images */
    .userImages {
        align-self: flex-end;
        width: 245px;
    }

    /* Text styles */
    .text {
        margin: 0;
    }

    /* Example styling for paragraph elements inside chat messages */
    p {
        margin: 5px 0;
    }

    /* Center alignment for specific elements */
    .CenterSays {
        align-self: center;
        background-color: #f1f0f0;
        border-radius: 10px;
        padding: 5px;
        max-width: 100%;
    }

    /* Sticky footer */
    .Sticky {
        padding: 20px;
        position: fixed;
        bottom: 0;
        width: 100%;
    }
</style>

<div class="container">

    <div class="row" style="margin-top: 20px;">
        <div class="col ml-3 mt-1">
            <!-- Back button -->
            <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" OnClick="ClickBack" Style="padding-top: 1px;"></MudIconButton>
            <!-- Title -->
            <span class="IconText">Jenny Wilson </span>
            <!-- Call and more icons -->
            <MudIconButton Icon="@Icons.Material.Filled.Call" Style="float: right;"></MudIconButton>
            <MudIconButton Class="rightIcon" Icon="@Icons.Material.Outlined.MoreHoriz" Style="float: right;"></MudIconButton>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="chat">
                <!-- Date separator -->
                <div class="CenterSays">
                    <div class="text">
                        <p>Today</p>
                    </div>
                </div>

                <!-- Messages -->
                <div class="OtherUserSays">
                    <div class="text">
                        <p>Hello, good morning. <span style="float:right">09:41</span></p>
                    </div>
                </div>
                <div class="OtherUserSays">
                    <div class="text">
                        <p>I am a Customer Service, is there anything I can help you with? 😄 <span style="float:right">09:41</span></p>
                    </div>
                </div>
                <div class="userSays">
                    <div class="text">
                        <p>Hi, I'm having problems with my services payment. <span style="float:right">09:41</span></p>
                    </div>
                </div>
                <div class="userSays">
                    <div class="text">
                        <p> Can you help me? <span style="float:right">09:41</span></p>
                    </div>
                </div>
                <div class="OtherUserSays">
                    <div class="text">
                        <p>Of course... <span style="float:right">09:41</span></p>
                    </div>
                </div>
                <div class="OtherUserSays">
                    <div class="text">
                        <p>Can you tell me the problem you are having? so I can help solve it 😁 <span style="float:right">10:00</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sticky input and button -->
    <div class="Sticky row DivCenter">
        <div class="col" style="width: 74%;">
            <!-- Message input field -->
            <MudTextField FullWidth="true" @bind-Value="Message" Label="Message" Variant="Variant.Filled" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Image" AdornmentColor="Color.Default" />
        </div>
        <div class="col" style="margin-right: 15px; margin-top: 5px;">
            <!-- Microphone button -->
            <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Mic" />
        </div>
    </div>
</div>

@code {
    public string Message { get; set; }

    @inject NavigationManager Navigation;

    private void ClickBack()
    {
        Navigation.NavigateTo("Home/4");
    }
}
