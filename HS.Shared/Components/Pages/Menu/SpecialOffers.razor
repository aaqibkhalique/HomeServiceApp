@page "/SpecialOffers"
@using HS.Shared.Components.Layout
@layout EmptyLayout

<style>
    /* Styling for the container */
    .container {
        overflow-y: hidden;
        overflow-x: hidden;
    }

    /* Centering elements horizontally */
    .DivCenter {
        display: flex;
        justify-content: center;
    }

    /* Styling for icon text */
    .IconText {
        font-size: xx-large;
        font-weight: bold;
        margin-left: 8px;
    }

    /* Styling for the right icon */
    .rightIcon .mud-icon-root {
        border: solid;
        border-radius: 12px;
    }
</style>

<!-- Container div for special offers content -->
<div class="container">

    <!-- Row for the special offers header -->
    <div class="row" style="margin-top: 20px;">
        <div class="col ml-3 mt-1">
            <!-- Back button icon -->
            <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" OnClick="ClickBack" Style="padding-top: 1px;"></MudIconButton>
            <!-- Special offers title -->
            <span class="IconText">Special Offers</span>
            <!-- More options icon -->
            <MudIconButton Class="rightIcon" Icon="@Icons.Material.Outlined.MoreHoriz" Style="float: right;"></MudIconButton>
        </div>
    </div>

    <!-- Row for the special offers images -->
    <div class="row mt-5">
        <!-- Image 1 -->
        <div>
            <MudImage Class="mx-auto my-auto" Src="images/T1.png" Elevation="0" Style="height:100%;width:100%" />
        </div>
        <!-- Image 2 -->
        <div>
            <MudImage Class="mx-auto my-auto" Src="images/T2.png" Elevation="0" Style="height:100%;width:100%" />
        </div>
        <!-- Image 3 -->
        <div>
            <MudImage Class="mx-auto my-auto" Src="images/T3.png" Elevation="0" Style="height:100%;width:100%" />
        </div>
        <!-- Image 4 -->
        <div>
            <MudImage Class="mx-auto my-auto" Src="images/T4.png" Elevation="0" Style="height:100%;width:100%" />
        </div>
    </div>

</div>

@code {
    // Injecting NavigationManager for navigation functionality
    @inject NavigationManager Navigation;

    // Method to handle back button click
    private void ClickBack()
    {
        Navigation.NavigateTo("Home");
    }
}
