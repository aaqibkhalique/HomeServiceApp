<!-- Page route and imports -->
@page "/ActionMenu"
@using HS.Shared.Components.Layout
@layout EmptyLayout

<!-- CSS styles -->
<style>
    /* Container styling */
    .container {
        overflow-y: auto;
        overflow-x: hidden;
        margin-bottom: 5px;
    }

    /* Center alignment for div elements */
    .DivCenter {
        display: flex;
        justify-content: center;
    }

    /* MudImage height */
    .mud-image {
        height: 50px;
    }

    /* Flex layout for text class */
    .text {
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    /* Flex layout for services class */
    .services {
        display: flex;
        justify-content: space-between;
        width: 90%;
    }

    /* Top border for linetop class */
    .linetop {
        border-top: solid 1px #e8e8e8;
    }

    /* Styling for MudChip */
    .mud-chip {
        border: solid !important;
    }

    /* Scrollable container */
    .scroll {
        margin: 4px, 4px;
        padding: 4px;
        width: 100%;
        overflow-x: auto;
        overflow-y: hidden;
        white-space: nowrap;
    }

    /* ServiceCard styling */
    .ServiceCard {
        height: 156px;
        margin-right: 5px;
        border-radius: 38px;
        margin-top: 20px;
    }

    /* Header content layout */
    .headerContent {
        display: flex;
    }

    /* Service name styling */
    .serviceName {
        margin-top: 7px;
    }

    /* Price styling */
    .price {
        margin-top: 3px;
    }

    /* Reviews styling */
    .reviews {
        margin-top: 2px;
    }

    /* Media query for smaller screens */
    @@media (max-width: 410px) {
        .ServiceCard {
            width: 355px;
            height: 161px;
        }

        .serviceName {
            margin-top: 2px;
            font-size: larger;
        }

        .reviews {
            font-size: 14px;
            margin-top: 8px;
        }
    }

    /* Media query for even smaller screens */
    @@media (max-width: 375px) {
        .ServiceCard {
            width: 345px;
        }

        .serviceName {
            margin-top: 2px;
            font-size: larger;
        }

        .reviews {
            margin-top: 2px;
            font-size: smaller;
        }

        .CardImg {
            height: 70px;
        }
    }

 
    @@media only screen and (max-device-width: 480px) {

        .headerText {
            font-size: 2vh;
        }

        .contentText {
            font-size: 3vh;
        }

        .headerIcon {
            padding-left: 2px;
        }

        .ServiceImages {
            height: 50px;
            width: 50px;
        }

        .ServicesText{
            font-size:2vh;
        }

        .ServiceCard {
            width: 300px;
            height: 161px;
        }

        .CardImg {
            height: 80px;
        }
    
       
    }

    @@media only screen and (max-width: 420px) {

        .carosel {
            height: 30vh;
        }

       
    }

    /* For screens larger than 1200px wide */
    @@media only screen and (min-width: 420px) {
    
        .carosel {
            height: 35vh;
        }

        .CardImg {
            height: 120px;
        }
    }

    @@media only screen and (min-width: 520px) {

        .carosel {
            height: 40vh;
        }

        .CardImg {
            height: 120px;
        }
    }   
    
    @@media only screen and (min-width: 550px) {

        .carosel {
            height: 45vh;
        }
    }

    @@media only screen and (min-width: 600px) {

        .carosel {
            height: 50vh;
        }
    }  
    @@media only screen and (min-width: 650px) {

        .carosel {
            height: 55vh;
        }
    }

    @@media only screen and (min-width: 750px) {

        .carosel {
            height: 60vh;
        }
    } 
    @@media only screen and (min-width: 800px) {

        .carosel {
            height: 65vh;
        }
    }

    @@media only screen and (min-width: 900px) {

        .carosel {
            height: 75vh;
        }
    }

    @@media only screen and (min-width: 1000px) {
        .carosel {
            height: 80vh;
        }
    } 
    @@media only screen and (min-width: 1150px) {
        .carosel {
            height: 85vh;
        }
    } 
    @@media only screen and (min-width: 1200px) {
        .carosel {
            height: 90vh;
        }
    }
    .caroselImg {
        height: 100%;
        width: 100%
    }

</style>

<!-- HTML content -->
<div class="container">

    <!-- Row for card header and content -->
    <div class="row">
        <div class="col ml-3 mt-1">
            <!-- Card header with avatar, content, and actions -->
            <MudCardHeader>
                <CardHeaderAvatar>
                    <!-- MudImage for avatar -->
                    <MudImage Src="images/DP.png"></MudImage>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <!-- Greeting text -->
                    <MudText Class="headerText" Typo="Typo.body2">Good Morning 👋</MudText>
                    <!-- User's name -->
                    <MudText Class="headerText" Style="font-weight:bold" Typo="Typo.subtitle1">Andrew Ainsley</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <!-- Notification and bookmark icons -->
                    <MudIconButton Size="Size.Large" Class="headerIcon" Icon="@Icons.Material.Filled.NotificationsNone" Color="Color.Default" OnClick="NavigateToNotification" />
                    <MudIconButton Size="Size.Large" Icon="@Icons.Material.Filled.BookmarkBorder" Color="Color.Default" OnClick="NavigateToBookmark" />
                </CardHeaderActions>
            </MudCardHeader>
            <!-- MudTextField for search -->
            <MudCardContent>
                <MudTextField @bind-Value="Search" OnKeyDown="@(() => ClickToNext("FilterResults"))" Label="Search" Variant="Variant.Filled" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.FilterList" AdornmentColor="Color.Primary" />
            </MudCardContent>
            <!-- MudCardActions for special offers -->
            <MudCardActions Class="text">
                <MudText Style="font-weight:bold" Typo="Typo.h6">Special Offers</MudText>
                <MudButton Variant="Variant.Text" OnClick="NavigateToSpecialOffers"> <MudText Color="Color.Primary" Style="font-weight:bold" Typo="Typo.h6">See All</MudText></MudButton>
            </MudCardActions>
        </div>
    </div>

    <!-- Row for MudCarousel -->
    <div class="row">
        <MudCarousel Class="mud-width-full carosel"  ShowArrows="false" ShowBullets="false" EnableSwipeGesture="true" AutoCycle="true" TData="object">
            <!-- Carousel items with MudImage -->
            <MudCarouselItem Transition="transition">
                <div class="d-flex" >
                    <MudImage Fluid="true" Class="mx-auto my-auto caroselImg" Src="images/T1.png" Elevation="0" />
                </div>
            </MudCarouselItem>
            <MudCarouselItem Transition="transition">
                <div class="d-flex" >
                    <MudImage Fluid="true" Class="mx-auto my-auto caroselImg" Src="images/T2.png" Elevation="0"  />
                </div>
            </MudCarouselItem>
            <MudCarouselItem Transition="transition">
                <div class="d-flex" >
                    <MudImage Fluid="true" Class="mx-auto my-auto caroselImg" Src="images/T3.png" Elevation="0"  />
                </div>
            </MudCarouselItem>
            <MudCarouselItem Transition="transition">
                <div class="d-flex" >
                    <MudImage Fluid="true" Class="mx-auto my-auto caroselImg" Src="images/T4.png" Elevation="0"  />
                </div>
            </MudCarouselItem>
        </MudCarousel>
    </div>

    <!-- Row for services section -->
    <div class="row">
        <div class="col ml-3 ">
            <!-- MudCardActions for services heading -->
            <MudCardActions Class="text">
                <MudText Style="font-weight:bold" Class="contentText" Typo="Typo.h6">Services</MudText>
                <MudButton Variant="Variant.Text"> <MudText Color="Color.Primary" Style="font-weight:bold" Typo="Typo.h6">See All</MudText></MudButton>
            </MudCardActions>
        </div>
    </div>
    <div class="row">
        <div class="col ml-3 services">
            <div style="text-align:center" @onclick=@(() => ClickToNext("ServiceCleaning"))>

                <MudImage Src="images/cleaning.png" Class="ServiceImages" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3 ServicesText">Cleaning</h5>
            </div>
            <div style="text-align:center">
                <MudImage Src="images/repairing.png" Class="ServiceImages" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3 ServicesText">Repairing</h5>
            </div>

            <div style="text-align:center" @onclick=@(() => ClickToNext("Painting"))>
                <MudImage Src="images/painting.png" Class="ServiceImages" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3 ServicesText">Painting</h5>
            </div>

            <div style="text-align:center">
                <MudImage Src="images/laundry.png" Class="ServiceImages" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3 ServicesText">Laundry</h5>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col ml-3 services">
            <div style="text-align:center">
                <MudImage Src="images/appliances.png" Class="ServiceImages" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3 ServicesText">Appliances</h5>
            </div>
            <div style="text-align:center">
                <MudImage Src="images/plumbing.png" Class="ServiceImages" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3 ServicesText">Plumbing</h5>
            </div>

            <div style="text-align:center">
                <MudImage Src="images/shifting.png" Class="ServiceImages" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3 ServicesText">Shifting</h5>
            </div>
            <div style="text-align:center" @onclick=@(() => NavigateToAllServices())>
                <MudImage Src="images/more.png" Class="ServiceImages" Elevation="0" Height="70" Width="70" />
                <h5 class="mt-3 ServicesText" >More</h5>
            </div>
        </div>
    </div>

    <div class="row mt-5">

        <div class="col ml-3 linetop ">
            <MudCardActions Class="text">
                <MudText Style="font-weight:bold" Class="contentText" Typo="Typo.h6">Most Popular Services</MudText>
                <MudButton Variant="Variant.Text" OnClick="NavigateToBookmark"> <MudText Color="Color.Primary" Style="font-weight:bold" Typo="Typo.h6">See All</MudText></MudButton>
            </MudCardActions>
        </div>
    </div>

    <!-- Row for MudChipSet filter -->
    <div class="row">
        <div class="col">
            <!-- Scrollable container for MudChipSet -->
            <div class="scroll">
                <MudChipSet Filter="false" Mandatory="true" SelectedChipChanged="OnSelectChip">
                    <!-- MudChips for filtering services -->
                    <MudChip Text="All" Variant="Variant.Text" Color="Color.Primary">All</MudChip>
                    <MudChip Text="Cleaning" Variant="Variant.Text" Color="Color.Primary">Cleaning</MudChip>
                    <MudChip Text="repairing" Variant="Variant.Text" Color="Color.Primary">Repairing</MudChip>
                    <MudChip Text="painting" Variant="Variant.Text" Color="Color.Primary">Painting</MudChip>
                    <MudChip Text="laundry" Variant="Variant.Text" Color="Color.Primary">Laundry</MudChip>
                    <MudChip Text="appliances" Variant="Variant.Text" Color="Color.Primary">Appliances</MudChip>
                    <MudChip Text="plumbing" Variant="Variant.Text" Color="Color.Primary">Plumbing</MudChip>
                    <MudChip Text="shifting" Variant="Variant.Text" Color="Color.Primary">Shifting</MudChip>
                </MudChipSet>
            </div>
        </div>
    </div>

    <div class="row" >
        <div class="col  mt-5 mb-5 ">
            <MudCard Elevation="5" Class="ServiceCard">
                <MudCardHeader>
                    <CardHeaderContent>
                        <div class="headerContent">
                            <MudImage Src="images/s1.png"  Elevation="0" Class="CardImg" /> 
                            <div style="margin-left:26px;">
                                <MudText Typo="Typo.subtitle1">Kylie Danford</MudText>
                                <MudText Class="serviceName font-weight-bold" Typo="Typo.h6">House Cleaning</MudText>
                                <MudText Class="price font-weight-bold" Color="Color.Primary" Typo="Typo.h6">$25</MudText>
                                <MudText Class="reviews" Typo="Typo.subtitle1"><MudIcon Class="reviews" Icon="@Icons.Material.Filled.Star" Color="Color.Warning" />     <span>4.9 | 6.182 reviews</span></MudText>
                            </div>
                        </div>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIconButton Icon="@Icons.Material.Filled.Bookmark" Color="Color.Primary" />
                    </CardHeaderActions>
                </MudCardHeader>
            </MudCard>

            <MudCard Elevation="5" Class="ServiceCard">
                <MudCardHeader>
                    <CardHeaderContent>
                        <div class="headerContent">
                            <MudImage Src="images/s2.png" Elevation="0"  Class="CardImg" />
                            <div style="margin-left:26px;">
                                <MudText Typo="Typo.subtitle1">Kylie Danford</MudText>
                                <MudText Class="serviceName font-weight-bold" Typo="Typo.h6">House Cleaning</MudText>
                                <MudText Class="price font-weight-bold" Color="Color.Primary" Typo="Typo.h6">$25</MudText>
                                <MudText Class="reviews" Typo="Typo.subtitle1"><MudIcon Class="reviews" Icon="@Icons.Material.Filled.Star" Color="Color.Warning" />     <span>4.9 | 6.182 reviews</span></MudText>
                            </div>

                        </div>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIconButton Icon="@Icons.Material.Filled.BookmarkBorder" Color="Color.Default" />
                    </CardHeaderActions>
                </MudCardHeader>
            </MudCard>
            <MudCard Elevation="5" Class="ServiceCard">
                <MudCardHeader>
                    <CardHeaderContent>
                        <div class="headerContent">
                            <MudImage Src="images/s3.png" Elevation="0"Class="CardImg" />
                            <div style="margin-left:26px;">
                                <MudText Typo="Typo.subtitle1">Kylie Danford</MudText>
                                <MudText Class="serviceName font-weight-bold" Typo="Typo.h6">House Cleaning</MudText>
                                <MudText Class="price font-weight-bold" Color="Color.Primary" Typo="Typo.h6">$25</MudText>
                                <MudText Class="reviews" Typo="Typo.subtitle1"><MudIcon Class="reviews" Icon="@Icons.Material.Filled.Star" Color="Color.Warning" />     <span>4.9 | 6.182 reviews</span></MudText>
                            </div>
                        </div>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIconButton Icon="@Icons.Material.Filled.Bookmark" Color="Color.Primary" />
                    </CardHeaderActions>
                </MudCardHeader>
            </MudCard>
            <MudCard Elevation="5" Class="ServiceCard">
                <MudCardHeader>
                    <CardHeaderContent>
                        <div class="headerContent">
                            <MudImage Src="images/s4.png" Elevation="0"  Class="CardImg" />
                            <div style="margin-left:26px;">
                                <MudText Typo="Typo.subtitle1">Kylie Danford</MudText>
                                <MudText Class="serviceName font-weight-bold" Typo="Typo.h6">House Cleaning</MudText>
                                <MudText Class="price font-weight-bold" Color="Color.Primary" Typo="Typo.h6">$25</MudText>
                                <MudText Class="reviews" Typo="Typo.subtitle1"><MudIcon Class="reviews" Icon="@Icons.Material.Filled.Star" Color="Color.Warning" />     <span>4.9 | 6.182 reviews</span></MudText>
                            </div>
                        </div>

                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIconButton Icon="@Icons.Material.Filled.BookmarkBorder" Color="Color.Default" />
                    </CardHeaderActions>
                </MudCardHeader>
            </MudCard>
        </div>

    </div>


</div>

<!-- Code section -->
@code {
    // Property for search input
    public string Search { get; set; }

    // Transition type for MudCarousel
    private Transition transition = Transition.Slide;

    // Navigation manager injection
    @inject NavigationManager Navigation;

    // Method for navigating back
    private void ClickBack()
    {
        Navigation.NavigateTo("ForgetPasswordOne");
    }

    // Method for verifying click
    private void VerifyClick()
    {
        Navigation.NavigateTo("CreateNewPassword");
    }

    // Navigation methods for different pages
    private void NavigateToBookmark()
    {
        Navigation.NavigateTo("MyBookmark");
    }

    private void NavigateToSpecialOffers()
    {
        Navigation.NavigateTo("SpecialOffers");
    }

    private void NavigateToNotification()
    {
        Navigation.NavigateTo("Notification");
    }

    private void NavigateToAllServices()
    {
        Navigation.NavigateTo("AllServices");
    }

    // Method for handling MudChip selection
    private void OnSelectChip(MudChip mud)
    {
        // Add logic for handling selected chip
    }

    private void ClickToNext(string path)
    {
        Navigation.NavigateTo(path);
    }
}
