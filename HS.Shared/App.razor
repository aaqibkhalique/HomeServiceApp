<Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies=" new[] {typeof(HS.Shared.Components.Layout.MainLayout).Assembly}">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(HS.Shared.Components.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(HS.Shared.Components.Layout.MainLayout)">
            <p role="alert">Not Found</p>
        </LayoutView>
    </NotFound>
</Router>
